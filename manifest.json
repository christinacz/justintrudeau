{
   "background": {
      "page": "src/bg/background.html",
      "persistent": true
   },
   "content_scripts": [ {
      "js": [ "js/jquery/jquery-3.1.1.min.js", "src/inject/inject.js"],
      "matches": [ "http://*/*","https://*/*" ]
   } ],
   "description": "Replace images of Donald Trump and his cabinet with Canadian PM Justin Trudeau",
   "homepage_url": "https://github.com/christinacz/justintrudeau/",
   "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon.png"
   },
   "manifest_version": 2,
   "name": "Find and Replace - Trump vs Trudeau",
   "short_name": "Trudeau your Chrome experience",
   "permissions": [ "http://*/*" ],
   "update_url": "https://clients2.google.com/service/update2/crx",
   "version": "0.0.4",

   "browser_action":{
    "default_icon": "icons/icon.png",
    "default_popup": "Trudeau your Chrome experience"
   }
}

